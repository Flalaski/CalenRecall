{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": "..",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    }
  },
  "include": [
    "test-calendar-accuracy.ts",
    "../src/utils/calendars/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../src/**/*.tsx",
    "../src/components/**/*",
    "../src/contexts/**/*",
    "../src/services/**/*",
    "../src/main.tsx",
    "../src/preferences.tsx",
    "../src/App.tsx"
  ]
}

